<div id="talk-content" class="tab-content">
  <!--<div id="talk-list__header">
    <h2 style="font-size: 10px">グループ検索機能</h2>
  </div>-->
  <div id="home__talk-list" class="full">
    <ul id="talk-list">
      <% @groups.each do |group| %>
      <li class="talk">
        <%= link_to group_messages_path(group) do %>
        <div class="talk-box">
          <img src="">
          <h2 class="talk-box__name">
            <% if group.users.count >= 3 %>
              <%= group.name %>>
            <% else %>
              <% group.users.each do |user| %>
                <% if user != current_user %>
                  <%= user.name %>
                <% end %>
              <% end %>
            <% end %>
            </h2>
          <p class="last-message">今日は昨日は楽しかったですね</p>
        </div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
